<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/halfday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17px"
            android:text="上午"
            android:textColor="#ffffff"
            android:textSize="38px" />

        <TextView
            android:id="@+id/systime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9px"
            android:text="10:08"
            android:textColor="#ffffff"
            android:textSize="57px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9px"
            android:layout_marginTop="8px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/specificday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-3-14"
                android:textColor="#ffffff"
                android:textSize="21px" />

            <TextView
                android:id="@+id/weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期五"
                android:textColor="#ffffff"
                android:textSize="21px" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265px"
            android:src="@drawable/set" />

        <ImageButton
            android:id="@+id/setclosebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:background="@drawable/closesetting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/wlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/wlan_off" />

        <ImageButton
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/data_off" />

        <ImageButton
            android:id="@+id/intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/intensity_off" />

        <ImageButton
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/lock_off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/wifi_off" />

        <ImageButton
            android:id="@+id/nfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/nfc_off" />

        <ImageButton
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/video_off" />

        <ImageButton
            android:id="@+id/file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="7dp"
            android:background="@drawable/file_off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:background="@drawable/linnerbg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/intensitycontrol" />

        <SeekBar
            android:id="@+id/intensity_seekBar"
            android:layout_width="580px"
            android:layout_height="25dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20dp"
            android:max="100"
            android:maxHeight="22px"
            android:minHeight="22px"
            android:progress="8"
            android:progressDrawable="@drawable/intensity_control_define_style"
            android:thumb="@drawable/intensity_control_thumb"
            android:thumbOffset="0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:background="@drawable/linnerbg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/volumn" />

        <SeekBar
            android:id="@+id/volumn_seekBar"
            android:layout_width="580px"
            android:layout_height="25dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20dp"
            android:max="100"
            android:maxHeight="22px"
            android:minHeight="22px"
            android:progress="8"
            android:progressDrawable="@drawable/intensity_control_define_style"
            android:thumb="@drawable/intensity_control_thumb"
            android:thumbOffset="0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:background="@drawable/linnerbg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="20px"
            android:background="@drawable/usb" />

        <TextView
            android:id="@+id/usbconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>